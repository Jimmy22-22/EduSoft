@page "/"
@using Microsoft.AspNetCore.Components.Web
@namespace EduSoft.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="EduSoft.styles.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="favicon.png" />

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var usuarioId = localStorage.getItem("usuarioId");
            var usuarioRol = localStorage.getItem("usuarioRol");

            if (usuarioId && usuarioRol) {
                if (usuarioRol === "Estudiante" && window.location.pathname !== "/dashboard-estudiante") {
                    window.location.href = "/dashboard-estudiante";
                } else if (usuarioRol === "Maestro" && window.location.pathname !== "/dashboard-maestro") {
                    window.location.href = "/dashboard-maestro";
                }
            }
        });
    </script>

    <component type="typeof(HeadOutlet)" render-mode="Server" />
</head>
<body>
    <component type="typeof(App)" render-mode="Server" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="_framework/blazor.server.js"></script>
</body>
</html>
